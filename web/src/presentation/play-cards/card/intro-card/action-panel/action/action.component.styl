tooltip-background-color = #fff8e1
tooltip-border-color = #bcaaa4

:host
  display block
  position relative

  &.show-tooltip
    .tooltip
      display block

      .tooltip-inner
        opacity 1
        transition all 500ms ease-in


  .tooltip
    display none
    position absolute
    top 0
    right -20%


    .tooltip-inner
      opacity 0
      position absolute
      padding 0.4rem
      background-color tooltip-background-color
      border 1px solid tooltip-border-color
      border-radius 2px
      box-shadow 1px 1px 2px 0 rgba(170, 170, 170, 1)

      &::after
        position absolute
        top 36%
        left -6px
        width 8px
        height 8px
        background tooltip-background-color
        border-bottom 1px solid tooltip-border-color
        border-left 1px solid tooltip-border-color
        content ''
        transform rotate(45deg)

      /deep/ *
        white-space nowrap
